h1 Productos
if productos == ""
    h3 No agregaste ningun producto
else
    table(class="table")
        thead
            tr
                th(scope="col") id
                th(scope="col") Nombre
                th(scope="col") Precio
                th(scope="col") Imagen 
        tbody
            each prod in productos
                tr
                    th(scope="row")= prod.id
                    td= prod.title
                    td= prod.price 
                    td 
                        img(src=prod.thumbnail , alt=prod.title, width="25")