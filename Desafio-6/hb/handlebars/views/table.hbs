<div class="entry">
    {{#if prods}}
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Title</th>
                <th scope="col">Price</th>
                <th scope="col">Imagen</th>
            </tr>
        </thead>
        <tbody>
            {{#each prods}}
            <tr>
                <th scope="row">{{ this.id }}</th>
                <td>{{ this.title }}</td>
                <td>{{ this.price }}</td>
                <td><img src="{{ this.thumbnail }}" alt="{{ this.title }}" width="30"></td>
            </tr>
            {{/each}}
        </tbody>
        {{else}}
        <div class="alert alert-danger mt-5" role="alert">
            Oops , no hay productos!
        </div>
        {{/if}}
</div>
</table>